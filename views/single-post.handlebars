<article class="post">
    <div class="title">
        <h2>
            {{post.title}} 
            <span> (Posted by {{post.user.username}} on
                {{moment post.created_at "dddd, DD MMMM YYYY HH:mm:ss"}})
            </span>
            <button class="deletePostBtn">Delete</button>
        </h2>
        </div>
            <div class="meta">
                {{post.content}}
            </div>
           
    <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>
        </div>

        <div>
            <button type="submit">add comment</button>
        </div>
    </form>

    <div class="comments">
        {{#each post.comments}}
            <section class="comment">
                <div class="meta">
                    {{user.username}} on {{created_at}}
                </div>
                <div class="text">
                    {{comment_text}}
                </div>
            </section>
        {{/each}}
    </div>
</article>

<script src="/javascript/comment.js"></script>
